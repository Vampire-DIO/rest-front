<view class="container"><block wx:for="{{products}}" wx:for-item="product" wx:for-index="index" wx:key="index"><view class="product-line"><view class="product-image"><image class="image" src="{{product.image}}"></image></view><view class="product-info"><view class="product-name">{{product.name}}</view><view class="product-details"><text class="price">{{"￥"+product.price}}</text><text class="sold-count">{{"已售"+product.soldCount+"件"}}</text></view><view class="selection"><view data-event-opts="{{[['tap',[['decrement',[index]]]]]}}" class="minus-btn" bindtap="__e">-</view><view class="quantity">{{product.quantity}}</view><view data-event-opts="{{[['tap',[['increment',[index]]]]]}}" class="plus-btn" bindtap="__e">+</view></view></view></view></block></view>